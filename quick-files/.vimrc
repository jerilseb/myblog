set ignorecase
set smartcase
set encoding=UTF-8
set foldmethod=marker
set updatetime=500
set shiftwidth=4
set tabstop=4
set expandtab
set cursorline
set termguicolors
"set signcolumn=number
"set mouse=a

colorscheme murphy
"colorscheme slate
"colorscheme desert

highlight LineNr ctermfg=239
highlight Comment ctermfg=241

" Map Esc
imap kj <Esc>
imap jk <Esc>

" Toggle paste mode
set pastetoggle=<F2>